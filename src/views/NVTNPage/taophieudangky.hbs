<div class="min-h-[calc(100vh-32rem)] max-w-[950px] px-24 py-5 mx-auto overflow-y-scroll">
  <form>
    <h2 class="text-center font-bold text-xl mb-4">Tạo phiếu và tiếp nhận thí sinh</h2>

    <!-- Chọn khách hàng -->
    <section class="mb-6">
      <h3 class="font-semibold text-lg mb-2">Chọn khách hàng</h3>
      <label for="">Không chỉnh sửa thuộc tính</label>
      <div class="grid grid-cols-2 gap-4 m-4">
        <div class="flex flex-col items-left space-y-2 w-full">
          <label for="maKhachHang" class="w-50 flex-initial">* Mã khách hàng</label>
          <input id="maKhachHang" name="maDonVi" type="text"
            class="ml-0 w-60 px-2 border border-gray-200 bg-gray-100 rounded-lg" value="{{maKhachHang}}" />
        </div>
        <div class="flex flex-col items-left space-y-2 w-full">
          <label class="w-50 flex-initial">* Tên khách hàng</label>
          <input id="tenKhachHang" type="text" readonly
            class="ml-0 w-60 px-2 border border-gray-200 bg-gray-100 rounded-lg" value="{{tenKhachHang}}">
        </div>
        <div class="flex flex-col items-left space-y-2 w-full">
          <label class="w-50 flex-initial">* Giới tính</label>
          <input id="gioiTinh" type="text" readonly class="ml-0 w-60 px-2 border border-gray-200 bg-gray-100 rounded-lg"
            value="{{gioiTinh}}">
        </div>
        <div class="flex flex-col items-left space-y-2 w-full">
          <label class="w-50 flex-initial">* CCCD</label>
          <input id="cccd" type="text" readonly class="ml-0 w-60 px-2 border border-gray-200 bg-gray-100 rounded-lg"
            value="{{cccd}}" oninput="">
        </div>
        <div class="flex flex-col items-left space-y-2 w-full">
          <label class="w-50 flex-initial">* Số điện thoại</label>
          <input id="sdt" type="text" readonly class="ml-0 w-60 px-2 border border-gray-200 bg-gray-100 rounded-lg"
            value="{{sdt}}">
        </div>
        <div class="flex flex-col items-left space-y-2 w-full">
          <label class="w-50 flex-initial">* Email</label>
          <input id="email" type="email" readonly class="ml-0 w-60 px-2 border border-gray-200 bg-gray-100 rounded-lg"
            value="{{email}}">
        </div>
        <div class="flex flex-col items-left space-y-2 w-full">
          <label class="w-50 flex-initial">* Loại khách hàng</label>
          <input id="loaiKhachHang" type="text" readonly
            class="ml-0 w-60 px-2 border border-gray-200 bg-gray-100 rounded-lg" value="{{loaiKhachHang}}">
        </div>
      </div>
      <button type="button" class="p-2 rounded-lg text-white font-bold bg-[#2E8BC0]" id="btnTimKiemKH">Tìm Kiếm</button>
    </section>

    <!-- Thông tin bài thi -->
    <section id="secThongTinBaiThi" class="mb-6">
      <h3 class="font-semibold text-lg mb-2">Thông tin bài thi (phần dành cho đơn vị)</h3>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label>* Loại bài thi</label>
          <select id="loaiBaiThi" class="ml-0 w-72 px-2 border border-gray-200 bg-gray-100 rounded-lg">
            <!-- {{#each danhSachBaiThi}} -->
            <!-- <option value="{{this.id}}">{{this.ten}}</option> -->
            <!-- {{/each}} -->
          </select>
        </div>
        <div>
          <label>* Ngày thi mong muốn</label>
          <input type="date" id="ngayThi" class="ml-0 w-60 px-2 border border-gray-200 bg-gray-100 rounded-lg"
            value="{{ngayThi}}">
        </div>
        <div class="col-span-2">
          <label>Yêu cầu</label>
          <input type="text" id="yeuCau" class="ml-0 w-60 px-2 border border-gray-200 bg-gray-100 rounded-lg"
            placeholder="Yêu cầu của khách hàng (nếu có)" value="{{yeuCau}}">
        </div>
      </div>
    </section>

    <!-- Danh sách thí sinh -->
    <section class="mb-6">
      <div class="flex justify-between items-center mb-2">
        <h3 class="font-semibold text-lg">Danh sách thí sinh</h3>
        <div>
          <button type="button" class="p-2 rounded-lg text-white font-bold bg-[#2E8BC0]">Import CSV</button>
          <button id="addThiSinhBtn" type="button" class="p-2 rounded-lg text-white font-bold bg-[#2E8BC0]">+ Thêm thí
