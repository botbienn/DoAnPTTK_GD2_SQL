<div class="max-w-4xl mx-auto px-6 py-10 space-y-8 text-gray-800">
  <!-- Tiêu đề -->
  <h1 class="text-center text-2xl font-semibold border-b pb-2">Thanh toán đăng ký</h1>

  <!-- Mã đăng ký -->
  <div class="flex items-center space-x-2">
    <label for="maDangKy" class="font-medium">Mã đăng ký</label>
    <input type="text" id="maDangKy" class="border rounded px-3 py-1 w-40" />
    <button id="btnTraCuu" class="p-2 rounded bg-blue hover:bg-babyblue hover:text-black text-white">Tìm kiếm</button>
  </div>

  <!-- Thông tin khách hàng -->
  <div id="khachHangSection">
    <h2 class="text-lg font-semibold mb-2">Thông tin khách hàng</h2>
    <div class="grid grid-cols-2 gap-y-1 text-sm">
      <div>Căn cước công dân: <span id="cccd" class="font-medium">Không có</span></div>
      <div>Họ tên: <span id="hoten" class="font-medium">Không có</span></div>
      <div>Email: <span id="email" class="font-medium">Không có</span></div>
      <div>Số điện thoại: <span id="sdt" class="font-medium">Không có</span></div>
      <div>Ngày lập: <span id="ngaylap" class="font-medium">Không có</span></div>
      <div>Tình trạng thanh toán: <span id="tinhTrang" class="font-medium">Không có</span></div>
      <div>Loại khách hàng: <span id="loaiKhachHang" class="font-medium">Không có</span></div>
      <div>Số lượng: <span id="soLuong" class="font-medium">Không có</span></div>
    </div>
  </div>

  <!-- Thông tin đăng ký -->
  <div id="dangKySection">
    <div class="flex justify-between items-center">
      <h2 class="text-lg font-semibold">Thông tin đăng ký</h2>
      <button id="thanhtoantructuyen" class="bg-blue hover:bg-babyblue hover:text-black text-white text-sm px-3 py-1 rounded">
        Thanh toán trực tuyến
      </button>
    </div>

    <!-- Danh sách bài thi -->
    <div id="dsBaiThi" class="border mt-2 max-h-56 overflow-y-auto p-2 space-y-4 bg-white"></div>
  </div>

  <!-- Tổng kết thanh toán -->
  <div id="thanhToanSection" class="grid grid-cols-2 gap-4 text-sm font-medium">
    <div class="space-y-1">
      <div>Tổng tiền: <span id="tongTien" class="font-bold"></span></div>
      <div>Tiền giảm: <span id="giamGia" class="font-bold">0</span></div>
      <div>Thành tiền: <span id="thanhTien" class="font-bold"></span></div>
    </div>
    <div class="space-y-1">
      <div class="flex items-center justify-between">
        <span>Tiền nhận:</span>
        <input id="tienNhan" type="text" class="border rounded px-2 py-1 w-32 text-right" />
      </div>
      <div class="flex items-center justify-between">
        <span>Tiền thối:</span>
        <span id="tienThoi">0</span>
      </div>
      <button id="btnThanhToan" class="mt-2 w-full bg-blue hover:bg-babyblue hover:text-black text-white px-3 py-1 rounded">
        Xác nhận thanh toán
      </button>
    </div>
  </div>
</div>

